<h1>Create New Supervisor</h1>

<div class="card card-container">
  <div class="card-body">
    <%= form_with model: @supervisor, local: true, url: supervisors_path do |form| %>
      <%= render "/shared/error_messages", resource: @supervisor %>
      <div class="field form-group">
        <%= form.label :email, t("common.email") %>
        <%= form.text_field :email, class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= form.label :display_name, t("common.display_name") %>
        <%= form.text_field :display_name, class: "form-control" %>
      </div>

      <div class="actions">
        <%= form.submit "Create Supervisor", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
