<div class="row">
  <div class="col-sm-12 dashboard-table-header">
    <h1>Supervisors</h1>
    <% if policy(Supervisor).create? %>
      <%= link_to "New Supervisor", new_supervisor_path, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div class="card card-container">
  <div class="card-body">
    <table class="table table-striped table-bordered" id="supervisors">
      <thead>
      <tr>
        <th>Supervisor Name</th>
        <th>Volunteer Assignments</th>
        <th>Serving Transition Aged Youth</th>
        <th>No Contact (14 days)</th>
        <th>Actions</th>
      </tr>
      </thead>

      <tbody>
      <% @supervisors.each do |supervisor| %>
        <tr>
          <td id="name-<%= supervisor.id %>">
            <span class="mobile-label">Supervisor Name</span> <%= link_to(supervisor.display_name, edit_supervisor_path(supervisor)) %>
          </td>
          <td id="volunteer-assignments-<%= supervisor.id %>">
            <span class="mobile-label">Volunteer Assignments</span> <%= supervisor.volunteers.size %>
          </td>
          <td id="serving-transition-aged-youth-<%= supervisor.id %>">
            <span class="mobile-label">Serving Transition Aged Youth</span> <%= supervisor.volunteers_serving_transition_aged_youth %>
          </td>
          <td id="no-contact-<%= supervisor.id %>">
            <span class="mobile-label">No Contact (14 days)</span> <%= supervisor.no_contact_for_two_weeks %>
          </td>
          <td>
            <span class="mobile-label">Actions</span> <%= link_to 'Edit', edit_supervisor_path(supervisor) %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
