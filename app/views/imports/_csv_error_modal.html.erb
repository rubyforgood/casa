<div class="modal show csv-error" style="display: block;">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-danger"><%= t(".title") %></h5>
      </div>
      <div class="modal-body">
        <%= sanitize import_error %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" onclick="dismissCsvErrorModal()"><%= t(".button.ok") %></button>
      </div>
    </div>
  </div>
</div>

<div class="modal-backdrop show csv-error"></div>

<script type="text/javascript">
  function dismissCsvErrorModal () {
    document.querySelectorAll('.csv-error').forEach(function (el) {
      el.remove()
    })
  }
</script>
