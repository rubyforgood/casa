<%= link_to t("button.back"), root_path %>
<h1><%= selected_organization.name %></h1>

<div class="card card-container">
  <div class="card-body">
    <div class="dashboard-table-header">
      <h3>Administrators</h3>
      <%=
        link_to "New CASA Admin",
                new_all_casa_admins_casa_org_casa_admin_path(selected_organization),
                class: "btn btn-primary"
      %>
    </div>
    <table class="table admin-list">
      <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Created At</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% selected_organization.casa_admins.each do |admin| %>
        <tr class="admin-<%= admin.id %>">
          <td><%= admin.display_name %></td>
          <td><%= admin.email %></td>
          <td><%= I18n.l(admin.created_at, format: :full, default: nil) %></td>
          <td><%= link_to t("button.edit"), edit_all_casa_admins_casa_org_casa_admin_path(selected_organization, admin) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="card card-container">
  <div class="card-body">
    <div class="card-title">
      <h3>Details</h3>
    </div>
    <ul class="list-group list-group-flush">
      <% @casa_org_metrics.each do |item_description, item_value| %>
        <li class="list-group-item">
          <strong><%= item_description %>:</strong> <%= item_value %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
